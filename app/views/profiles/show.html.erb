<%= render "repos/search" %>
<div class="container my-4">
    <div class="row">
        <div class="col-md-4">
            <div class="text-center">
                <h4 class="badge rounded-pill text-bg-warning">
                    has <%= @profile.repos.count %> repositories
                </h4>
            </div>
            <div class="text-center">
                <% if @profile.avatar.present? %>
                    <%= image_tag(@profile.avatar.variant(resize_to_fill: [350, 350]), class: "avatar-lg img-thumbnail rounded-circle",  alt:"Avatar") %>
                <% else %>
                    <%= image_tag("https://png.pngtree.com/png-vector/20220608/ourmid/pngtree-user-mysterious-anonymous-account-vector-png-image_4816288.png", class:"avatar-lg img-thumbnail rounded-circle",  alt:"Avatar") %>
                <% end %>
            </div>
            <div class="text-center text-white">
                <h3>
                    <%= @profile.username %>
                </h3>
                <h6>
                    <%= @profile.email %>
                </h6>
                <div class="d-grid gap-2">
                    <%= link_to 'Edit profile', edit_user_registration_path, class:"btn btn-dark" if @profile.id == current_user.id %>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="mb-3">
                <div style="min-height:400px;">
                    <%= link_to 'Create a new repository', new_repo_path, class:"btn btn-success my-2" if @profile.id == current_user.id %>
                    <%= render 'repos/repo', obj: @repos %>        
                </div>
                <div class="my-2">
                    <%= paginate @repos %>
                </div>
            </div>
        </div>
    </div>
</div>
