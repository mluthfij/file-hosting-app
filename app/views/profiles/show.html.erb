<%= render "repos/search" %>
<div class="container my-4">
    <div class="row">
        <div class="col-md-4">
        <div class="text-center">
            <h4 class="badge rounded-pill text-bg-warning">
                has <%= @profile.repos.count %> repositories
            </h4>
        <% if current_user.avatar.present? %>
          <%= image_tag(current_user.avatar.variant(resize_to_fill: [150, 150]), class: "avatar-lg img-thumbnail rounded-circle",  alt:"Avatar") %>
        <% else %>
            <%= image_tag("https://png.pngtree.com/png-vector/20220608/ourmid/pngtree-user-mysterious-anonymous-account-vector-png-image_4816288.png", class:"avatar-lg img-thumbnail rounded-circle",  alt:"Avatar") %>
        <% end %>
        </div>
        <div class="text-center">
            <h3>
                <%= @profile.username %>
            </h3>
            <h6>
                <%= @profile.email %>
            </h6>
            <div class="d-grid gap-2">
                <%= link_to 'Edit profile', edit_user_registration_path, class:"btn btn-dark" %>
            </div>
        </div>
        </div>
        <div class="col-md-8">
        <div class="mb-3">
            <div style="min-height:400px;">
                <%= link_to 'New Repository', new_repo_path, class:"btn btn-success my-2" %>
                <%= render 'repos/repo', obj: @repos %>        
            </div>
            <%= paginate @repos %>
        </div>
    </div>
  </div>
</div>
